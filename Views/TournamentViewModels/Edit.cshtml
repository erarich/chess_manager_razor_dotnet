@model api_mvc.Models.TournamentViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">Edit Tournament</h4>
<hr />
<div class="row text-center">
    <div class="col-md-4  mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group custom-margin">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-inline-flex justify-content-between">
                <div class="form-group form-check custom-margin">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFinished" /> @Html.DisplayNameFor(model => model.IsFinished)
                    </label>
                </div>
                <div class="form-group form-check custom-margin">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsStarted" /> @Html.DisplayNameFor(model => model.IsStarted)
                    </label>
                </div>
            </div>
            <div class="form-group custom-margin">
                <label asp-for="PlayersNumber" class="control-label">Player's Limit</label>
                <input asp-for="PlayersNumber" class="form-control" />
                <span asp-validation-for="PlayersNumber" class="text-danger"></span>
            </div>
            <div class="form-group custom-margin">
                <label asp-for="RoundsNumber" class="control-label">Total Rounds</label>
                <input asp-for="RoundsNumber" class="form-control" />
                <span asp-validation-for="RoundsNumber" class="text-danger"></span>
            </div>
            <div class="form-group custom-margin">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="My Tournaments">Back to My Tournaments</a>
</div>

<style>
    .custom-margin {
        margin-bottom: 1rem; 
    }

    .form-group.form-check.custom-margin {
        margin-right: 1rem; 
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
