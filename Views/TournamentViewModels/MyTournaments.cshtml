@model IEnumerable<api_mvc.Models.TournamentViewModel>

@{
    ViewData["Title"] = "MyTournaments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>My Tournaments</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFinished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoundsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFinished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsStarted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayersNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoundsNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
